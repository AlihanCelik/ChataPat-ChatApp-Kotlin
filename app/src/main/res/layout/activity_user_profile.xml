<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".alluser.userProfileActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/profileLayout"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#007aff"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/profile"
            app:civ_border_color="#009EFF"
            app:civ_border_width="2dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/receiverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/spartan_bold"
            android:gravity="center"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="25dp">

        </TextView>

        <TextView
            android:id="@+id/receiverEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/spartan_regular"
            android:gravity="center"
            android:text="email"

            android:textColor="@color/black"
            android:textSize="18dp">

        </TextView>

        <TextView
            android:id="@+id/receiverStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/spartan_regular"
            android:gravity="center"
            android:text="Status"
            android:textColor="@color/white"
            android:textSize="18dp">

        </TextView>




    </LinearLayout>
    <TextView

        android:id="@+id/friendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileLayout"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/add_friend_button"
        android:fontFamily="@font/spartan_bold"

        android:gravity="center"
        android:onClick="FriendClick"
        android:padding="10sp"
        android:text="Send Friend Request"
        android:textColor="@color/white"
        android:textSize="14sp">

    </TextView>

    <TextView

        android:id="@+id/DeclineButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friendButton"
        android:layout_marginStart="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/decline_button"
        android:fontFamily="@font/spartan_bold"
        android:gravity="center"
        android:onClick="DeclineClick"
        android:padding="10sp"
        android:text="Decline Request"
        android:textColor="@color/white"
        android:textSize="14sp">

    </TextView>


</RelativeLayout>