<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="13dp"
        android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="10dp"
            android:id="@+id/notification_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            android:src="@drawable/profile"
            >

        </de.hdodenhof.circleimageview.CircleImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#007aff"
                android:textSize="15dp"
                android:fontFamily="@font/spartan_bold"
                android:text="Name"
                android:gravity="center"></TextView>
            <TextView
                android:id="@+id/notification_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/spartan_regular"
                android:text="Email"
                android:gravity="center"></TextView>


            <TextView

                android:id="@+id/acceptfriendButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/add_friend_button"
                android:fontFamily="@font/spartan_bold"

                android:gravity="center"

                android:padding="10sp"
                android:text="Accept Friend Request"
                android:textColor="@color/white"
                android:textSize="14sp">

            </TextView>

            <TextView

                android:id="@+id/DeclineButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/friendButton"
                android:layout_marginStart="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/decline_button"
                android:fontFamily="@font/spartan_bold"
                android:gravity="center"

                android:padding="10sp"
                android:text="Decline Request"
                android:textColor="@color/white"
                android:textSize="14sp">

            </TextView>





        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>