<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"

    android:orientation="vertical">
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="64dp"
            android:layout_height="60dp"
            android:id="@+id/chatprofileimage"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:src="@mipmap/ic_launcher">

        </de.hdodenhof.circleimageview.CircleImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/chatprofilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:maxLines="1"
            android:textSize="16sp"
            android:fontFamily="@font/spartan_bold"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chatprofilestatus"
            android:textSize="12sp"
            android:text=" "
            android:maxLines="1"
            android:fontFamily="@font/spartan_regular"></TextView>

        </LinearLayout>

    </LinearLayout>
    <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#666666"></View>
</LinearLayout>