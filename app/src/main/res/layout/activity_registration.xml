<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spartan_bold"
            android:gravity="center"
            android:text="Create Account"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/registration_profile_image"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginTop="20sp"
            android:onClick="gorselSec"
            android:src="@drawable/profile"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp">

        </de.hdodenhof.circleimageview.CircleImageView>


        <EditText
            android:id="@+id/registrationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="25sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/editext_shape"
            android:fontFamily="@font/spartan_regular"
            android:hint="Name"

            android:padding="10sp"
            android:textColor="@color/black"></EditText>

        <EditText
            android:id="@+id/registrationEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/editext_shape"
            android:fontFamily="@font/spartan_regular"
            android:hint="Email Address"
            android:padding="10sp"
            android:textColor="@color/black"></EditText>

        <EditText
            android:id="@+id/registrationPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/editext_shape"
            android:fontFamily="@font/spartan_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10sp"
            android:textColor="@color/black"></EditText>

        <EditText
            android:id="@+id/registrationConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/editext_shape"
            android:fontFamily="@font/spartan_regular"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="10sp"
            android:textColor="@color/black"></EditText>

        <TextView
            android:id="@+id/registrationSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/sign_in_button"
            android:fontFamily="@font/spartan_bold"
            android:gravity="center"
            android:onClick="SignUp"
            android:padding="10sp"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="14sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5sp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spartan_regular"
            android:text="Already Account "
            android:textSize="16sp"></TextView>

        <TextView

            android:id="@+id/text_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spartan_bold"
            android:onClick="SignIn"
            android:text="Sign in"
            android:textColor="#007aff"
            android:textSize="16sp"></TextView>


    </LinearLayout>

</RelativeLayout>